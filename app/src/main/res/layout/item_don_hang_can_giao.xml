<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:backgroundTint="#37FF00"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Cần giao"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Địa chỉ"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTNN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Tên người nhận"
                android:textColor="@color/black" />

            <TextView
                android:textStyle="bold"
                android:textSize="11dp"
                android:id="@+id/tvMDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Mã đơn hàng"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDaNhanHangCanGiao"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_button_completed"
                android:text="Đã nhận" />

            <Button
                android:id="@+id/btnHuyHangCanGiao"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_button_cancel"
                android:text="Hủy" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>