<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/ly_do_that_bai" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_n_h_ng"
            android:textColor="@color/black"
            android:textSize="@dimen/_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMaDHThatBai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_214w4364ds"
            android:textColor="@color/black"
            android:textSize="@dimen/_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnKLLD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kh_ng_li_n_l_c_c" />

        <Button
            android:id="@+id/btnTDTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thay_i_th_ng_tin" />

        <Button
            android:id="@+id/btnKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kh_ch_h_y" />
    </LinearLayout>
</LinearLayout>